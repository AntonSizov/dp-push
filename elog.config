% -*- mode: Erlang;-*-
[{sasl, [
         %% {sasl_error_logger, false}, %minimise shell error logging
         {errlog_type, error}, % error | progress | all

         %% define the parameters of the rotating log
         {error_logger_mf_dir,"./logs" }, % the log file directory
         {error_logger_mf_maxbytes,10485760}, % bytes per logfile, 10MB here
         {error_logger_mf_maxfiles, 10} % maximum number of files
        ]}].
